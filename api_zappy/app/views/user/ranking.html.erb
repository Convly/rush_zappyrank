<div>
  <div class="navbar-fixed">
    <nav class="nav-extended" style="background-color: #2DAAE2;">
      <div class="nav-wrapper">
        <a href="menu.html.erb" class="brand-logo center">ZappyRank</a>
        <ul class="right hide-on-med-and-down">
          <li><a href="https://www.zappyrank.eu/auth/logout">Logout</a></li>
	  <% if @user_log %>
          <li><%= link_to 'Mes log', @user_log, download: '' %></li>
	  <% end %>
	  <% if @user_log %>
          <li><%= link_to 'Log serveur', @server_log, download: '' %></li>
	  <% end %>
          <li><a href="https://www.zappyrank.eu/auth/logout">Logout</a></li>
        </ul>
      </div>
      <div class="nav-content">
        <ul class="tabs tabs-transparent">
          <li class="tab"><a class="active" onclick="redirectLeaderboard()">Leaderboard</a></li>
          <!--<li class="tab"><a onclick="redirectLivecode()">Live Code</a></li>-->
          <li class="tab"><a onclick="redirectUpload()">Upload</a></li>
        </ul>
      </div>
    </nav>
  </div>
</div>

<table class="row container center col s12 m12 l12" style="margin-top: 50px">
  <thead style="border-bottom: 0px">
  <tr class="white-text">
    <th>Classement</th>
    <th>Login</th>
    <th>Promo</th>
    <th>Ville</th>
    <th>Points</th>
  </tr>
  </thead>
  <tbody>
    <% @ranking.each do |r| %>
    <tr class="white-text">
      <td>
        <% if r.ranking == -1 && r.email == @user.email %>
          Hors classement
        <% else %>
          <%= r.ranking %>
        <% end %>
      </td>
      <td><%= r.email %></td>
      <td><%= r.promo %></td>
      <td><%= r.city %></td>
      <td><%= r.score %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<script>
  function redirectLeaderboard(){
      window.location = "https://www.zappyrank.eu/ranking";
  }
  function redirectLivecode(){
      window.location = "https://www.zappyrank.eu/code";
  }
  function redirectUpload(){
      window.location = "https://www.zappyrank.eu/upload";
  }
</script>
